{
  "name": "youcanstudy",
  "version": "1.0.0",
  "description": "Learning Diagnostic App - Evidence-based study recommendations",
  "type": "module",
  "scripts": {
    "all": "npm run clean && npm run build && npm run type-check && npm run lint && npm run test",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "find src tests -name '*.js' -type f -delete",
    "test": "npm run test:run && npm run test:e2e",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
